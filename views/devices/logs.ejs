<% include ../partials/header %>


<h1 style="text-align: center">Logs de Dispositivos</h1>
<div style="margin: 35px 10%;">
    
    <table class="table table-hover table-dark">
        <thead>
            <tr>
            <th scope="col">Nombre</th>
            <th scope="col">Direcc√≠on IP</th>
            <th scope="col">Latitud</th>
            <th scope="col">Longitud</th>
            <th scope="col">Estado</th>
            <th scope="col">Fecha/Hora</th>
            </tr>
        </thead>
        <tbody>
                <% logs.forEach(function(log){ %>
                    <% if (log.device.status) { %>
                        <tr style="color: black;">
                            <th scope="row" class="table-success"><%= log.device.name %></th>
                            <td class="table-success"><%= log.device.ipAddress %></td>
                            <td class="table-success"><%= log.device.latitud %></td>
                            <td class="table-success"><%= log.device.longitud %></td>
                            <td class="table-success"><%= log.device.status %></td>
                            <td class="table-success"><%= log.updated.toLocaleString() %></td>
                        </tr>
                    <% } else { %>
                        <tr style="color: black;">
                            <th scope="row" class="table-danger"><%= log.device.name %></th>
                            <td class="table-danger"><%= log.device.ipAddress %></td>
                            <td class="table-danger"><%= log.device.latitud %></td>
                            <td class="table-danger"><%= log.device.longitud %></td>
                            <td class="table-danger"><%= log.device.status %></td>
                            <td class="table-danger"><%= log.updated.toLocaleString() %></td>
                        </tr>
                    <% } %>
                <% }); %>
        </tbody>
    </table>
</div>


<% include ../partials/footer %>
